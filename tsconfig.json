{
  "compilerOptions": {
    "baseUrl": "./",
    "rootDir": ".",
    "target": "es5",
    "module": "es2015",
    "lib": ["es2017", "dom"],
    "strict": true,
    "declaration": true,
    "sourceMap": false,
    "declarationMap": false,
    "stripInternal": true,
    "downlevelIteration": true,
    "moduleResolution": "node",
    "typeRoots": ["node_modules/@types", "typings"],
    "paths": {
      "@local-tests/*": ["tests/*"],
      "@local-tasks/*": ["tasks/*"],
      "@rschedule/core": ["packages/core/src"],
      "@rschedule/core/*": ["packages/core/src/*"],
      "@rschedule/ical-tools": ["packages/ical-tools/src"],
      "@rschedule/ical-tools/*": ["packages/ical-tools/src/*"],
      "@rschedule/json-tools": ["packages/json-tools/src"],
      "@rschedule/json-tools/*": ["packages/json-tools/src/*"],
      "@rschedule/rule-tools": ["packages/rule-tools/src"],
      "@rschedule/rule-tools/*": ["packages/rule-tools/src/*"],
      "@rschedule/recurrence-rules-resolver": ["packages/recurrence-rules-resolver/src"],
      "@rschedule/recurrence-rules-resolver/*": ["packages/recurrence-rules-resolver/src/*"],
      "@rschedule/dayjs-date-adapter": ["packages/dayjs-date-adapter/src"],
      "@rschedule/dayjs-date-adapter/*": ["packages/dayjs-date-adapter/src/*"],
      "@rschedule/joda-date-adapter": ["packages/joda-date-adapter/src"],
      "@rschedule/joda-date-adapter/*": ["packages/joda-date-adapter/src/*"],
      "@rschedule/moment-date-adapter": ["packages/moment-date-adapter/src"],
      "@rschedule/moment-date-adapter/*": ["packages/moment-date-adapter/src/*"],
      "@rschedule/moment-tz-date-adapter": ["packages/moment-tz-date-adapter/src"],
      "@rschedule/moment-tz-date-adapter/*": ["packages/moment-tz-date-adapter/src/*"],
      "@rschedule/luxon-date-adapter": ["packages/luxon-date-adapter/src"],
      "@rschedule/luxon-date-adapter/*": ["packages/luxon-date-adapter/src/*"],
      "@rschedule/standard-date-adapter": ["packages/standard-date-adapter/src"],
      "@rschedule/standard-date-adapter/*": ["packages/standard-date-adapter/src/*"]
    }
  },
  "exclude": ["node_modules/**", "tmp"],
  "compileOnSave": false
}
